  <script src="/scripts/my-organizations.js"></script>
</head>

<body>
  <a id="org-json" class="hidden"><%- JSON.stringify(orgs) %></a>
  <%- include('partials/_header', { user: user }) %>

<main>
  <section class="create_organizations">
    <div class="w3-display-middle"></div>
    <h2>Create new organization</h2>
  </section>
  <section class="new_organization" id="new_organization">
  <form id="new_organization_form" class="new_organization" method="POST" action="/users/orgs">
    Add new organization:<br>
    <input type="text" name="orgName" placeholder="Organization name" required><br><br>
    <button type="submit">Create</button>
  </form>
  </section>
</main>

<div id="my-organizations" class="grid-container"></div>
</body>

</html>
